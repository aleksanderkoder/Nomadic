<Window x:Class="Nomadic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nomadic"
        mc:Ignorable="d" FontFamily="Segoe UI Light" FontSize="18"
        Title="Nomadic" Height="900" Width="1600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="btnSignIn" Grid.Column="1" Grid.Row="6" Content="Sign in" Click="btnSignInClick" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120"/>
        <TextBox x:Name="txtEmail" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Email Address" TextWrapping="Wrap" Width="120"/>
        <TextBox x:Name="txtPassword" Grid.Column="1" Grid.Row="5" HorizontalAlignment="Center" Text="Password" TextWrapping="Wrap" VerticalAlignment="Center" Width="120"/>
        <TextBlock Text="Nomadic" FontSize="100" Grid.Column="1" Grid.Row="2" Grid.RowSpan="2"  HorizontalAlignment="Center"/>
    </Grid>
</Window>
